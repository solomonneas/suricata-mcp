{
  "name": "suricata-mcp",
  "version": "1.0.0",
  "description": "MCP server for Suricata IDS/IPS EVE JSON log analysis and rule management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "suricata-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "generate-eve": "tsx scripts/generate-eve.ts"
  },
  "author": "Solomon Neas <me@solomonneas.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/solomonneas/suricata-mcp.git"
  },
  "homepage": "https://github.com/solomonneas/suricata-mcp#readme",
  "bugs": {
    "url": "https://github.com/solomonneas/suricata-mcp/issues"
  },
  "keywords": [
    "mcp",
    "suricata",
    "ids",
    "ips",
    "network-security",
    "eve-json",
    "soc",
    "intrusion-detection",
    "threat-hunting"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
